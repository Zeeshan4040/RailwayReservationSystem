 <!-- Train Schedule Master Start -->

 @model List<TrainScheduleMaster>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <h5 class="mb-0">Train Schedule Master</h5>
                </div>
                <table class="table table-striped table-info">
                    <thead>
                        <tr>
                            <th>Shd. ID</th>
                            <th>Train No.</th>
                            <th>Station Code</th>
                            <th>Distance</th>
                            <th>Arrival Time</th>
                            <th>Departure Time</th>
                            <th>Day</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@data.Schedule_Id</td>
                                <td>@data.Train_No</td>
                                <td class="text-uppercase">@data.Station_Code</td>
                                <td>@data.Distance</td>
                                <td>@data.Arrival_Time</td>
                                <td>@data.Departure_Time</td>
                                <td>@data.Day</td>
                                <td>
                                    <a href="@Url.Action("TrainScheduleMasterEdit", "Admin", new{id=data.Schedule_Id})" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex align-items-start">
                    <a href="@Url.Action("TrainScheduleMasterAdd", "Admin")">
                        <button class="btn btn-primary">
                            Add New
                        </button>
                    </a>
                    <button class="ms-2 btn btn-primary">
                        Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Train Master Master End -->
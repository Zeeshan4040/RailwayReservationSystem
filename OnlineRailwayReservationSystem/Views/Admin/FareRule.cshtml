 <!-- Fare Rule Master Start -->

 @model List<FareRule>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <h5 class="mb-0">Fare Rule - Stage Master</h5>
                </div>
                <table class="table table-striped table-info">
                    <thead>
                        <tr>
                            <th>Stage ID</th>
                            <th>Coach Type</th>
                            <th>Distance From</th>
                            <th>Distance Upto</th>
                            <th>Ticket Amount</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@data.Fare_Id</td>
                                <td>@data.Coach_Type</td>
                                <td>@data.Distance_From</td>
                                <td>@data.Distance_To</td>
                                <td>@data.Ticket_Amount</td>
                                <td>
                                    <a href="@Url.Action("FareRuleEdit", "Admin", new{id=data.Fare_Id})" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex align-items-start">
                    <a href="@Url.Action("FareRuleAdd", "Admin")">
                        <button class="btn btn-primary">
                            Add New
                        </button>
                    </a>
                    <button class="ms-2 btn btn-primary">
                        Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fare Rule Master End -->
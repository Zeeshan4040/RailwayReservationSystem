<!-- Station Master Edit Start -->
@model StationMaster

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <h5 class="mb-0">Add Station Master</h5>
                </div>
                <form action="" method="post">
                    <div class="bg-light rounded d-block ms-auto me-auto h-100 p-4">
                        @* <div class="form-floating mb-3">
                        <input type="text" class="form-control w-50" placeholder="Station ID :">
                        <label>Station ID :</label>
                        </div> *@
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control w-50 text-uppercase" name="Station_Code" placeholder="Station Code :">
                            <label>Station Code :</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control w-50 text-uppercase" name="Station_Name" placeholder="Station Name :">
                            <label>Station Name :</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control w-50 text-uppercase" name="Station_Type" placeholder="Railway Type :">
                            <label>Railway Type :</label>
                        </div>
                        <div>
                            <div class="d-flex align-items-start">
                                <button class="btn btn-primary" type="submit">
                                    Submit
                                </button>
                                <button class="ms-2 btn btn-primary">
                                    Back
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Station Master Edit End -->
<!-- Station Master Start -->

@model List<StationMaster>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <h5 class="mb-0">Main Master</h5>
                </div>
                <table class="table table-striped table-info">
                    <thead>
                        <tr>
                            <th>Station ID</th>
                            <th>Station Code</th>
                            <th>Station Name</th>
                            <th>Station Type</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@data.Station_Id</td>
                                <td class="text-uppercase">@data.Station_Code</td>
                                <td class="text-uppercase">@data.Station_Name</td>
                                <td class="text-uppercase">@data.Station_Type</td>
                                <td>
                                    <a href="@Url.Action("StationMasterEdit", "Admin", new{id=data.Station_Id})" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex align-items-start">
                    <a href="@Url.Action("StationMasterAdd", "Admin")">
                        <button class="btn btn-primary">
                            Add New
                        </button>
                    </a>
                    <button class="ms-2 btn btn-primary">
                        Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Station Master End -->